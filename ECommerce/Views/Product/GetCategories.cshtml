@model IEnumerable<ECommerce.Entity.Category>

@{
    var selectedCategory = Url.RequestContext.RouteData.Values["id"]?.ToString() ?? "0";
}

<ul class="list-group">
    <li class="list-group-item">
        <a href="@Url.Action("List","Product")">
            All Categories
        </a>
    </li>

    @foreach (var item in Model)
    {
        string result = int.Parse(selectedCategory) == item.Id ? "list-group-item active": "list-group-item";

        <a href="@Url.Action("List", "Product", new { id = item.Id })"
           class="@result">
            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
            @item.Name
        </a>
    }

</ul>
