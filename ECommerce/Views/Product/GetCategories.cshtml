@model IEnumerable<ECommerce.Entity.Category>

@{
    var selectedCategory = Url.RequestContext.RouteData.Values["id"];
}

    <ul class="list-group">
        <li class="list-group-item">
            <a href="@Url.Action("List","Product")">
                All Categories
            </a>
        </li>
        @foreach (var item in Model)
        {
            if (selectedCategory != null)
            {
                if (item.Id == int.Parse(selectedCategory.ToString()))
                {
                        <a href="@Url.Action("List", "Product", new { id = item.Id })" class="list-group-item active">
                            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                            @item.Name
                        </a>

                }
                else
                {
                        <a href="@Url.Action("List", "Product", new { id = item.Id })" class="list-group-item">
                            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                            @item.Name
                        </a>

                }


            }
            else
            {
             
                    <a href="@Url.Action("List", "Product", new { id = item.Id })" class="list-group-item">
                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                        @item.Name
                    </a>
                


            }
        }


    </ul>
