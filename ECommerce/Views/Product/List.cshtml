@using ECommerce.Models
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "ProductList";
}


<div class="container pb-5">
    <div class="row">

        <div class="col-md-3">
            @Html.Action("GetCategories", "Product")

        </div>
        <div class="col-md-9">

            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    There is no product for this category
                </div>
            }
            else
            {
        <div class="alert alert-warning" role="alert">
            <i class="fa fa-check-square" aria-hidden="true"></i>

            @{
                string productCountSpecial = Model.Count().ToString();
                if (Model.Count() == 1)
                {
                    productCountSpecial += " product";
                }
                else
                {
                    productCountSpecial += " products";
                }

                productCountSpecial += " found for this category";
            }

            @productCountSpecial
        </div>

            }

            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>